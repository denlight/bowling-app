{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "noImplicitAny": false,
      "removeComments": false,
      "outDir": ".dist",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "declaration": false,
      "typeRoots": [
          "../node_modules/@types"
      ],
      "types": [
          "node",
          "jasmine",
          "core-js"
      ],
      "lib": [
          "es2015",
          "dom"
      ]
  },
  "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true,
      "useTranspileModule": true,
      "doTypeCheck": true,
      "forkChecker": true
  },
  "exclude": [
    "node_modules"
  ]
}
